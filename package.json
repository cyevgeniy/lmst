{
  "name": "lmst",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "size-limit": [
    {
      "limit": "10 kB",
      "path": "dist/assets/*.js"
    }
  ],
  "scripts": {
    "dev": "vite",
    "build": "node scripts/validate-env.js && tsc && vite build && cp _redirects dist/_redirects",
    "preview": "vite preview",
    "size": "npm run build && size-limit"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "*.{js,ts}": "prettier --write"
  },
  "devDependencies": {
    "@size-limit/file": "^11.1.4",
    "@types/jsdom": "^21.1.5",
    "browserslist": "^4.23.2",
    "dotenv": "^16.4.5",
    "jsdom": "^22.1.0",
    "lightningcss": "^1.25.1",
    "nano-staged": "^0.8.0",
    "prettier": "3.5.2",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.4",
    "tap": "^21.0.1",
    "typescript": "^5.3.3",
    "vite": "^4.5.5",
    "zod": "^3.23.8"
  }
}
